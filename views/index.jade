    script(src='js/vendor/modernizr-2.6.2-respond-1.1.0.min.js')
  body
    #fb-root
    script(src='js/fb.js')
    .navbar
      .navbar-inner
        .container.row-fluid
         
          a.brand(href='#')      
          .btn-nabvar-group.visible-phone    
            .btn.btn-navbar
              i.icon-user.icon-white  
            .btn.btn-navbar
              i.icon-search.icon-white
            .btn.btn-navbar
              i.icon-shopping-cart.icon-white
          ul.nav.hidden-phone
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown')
                .settings
                  i.icon-user.icon-white                              
              ul.dropdown-menu
                li
                  a.btnTest(href='#') Mi cuenta                  
                if user.store 
                  li.divider
                  li
                    a(href='/store/order') Mi tienda                  
                li.divider
                li
                  a(href='/logout') Cerrar sesiÃ³n
          .searchBar.span8.hidden-phone
            .searchIcon
              i.icon-search.icon-white
            input.search.span8(type="text",name="search",autocomplete="off", placeholder="Haz click aqui para buscar", onfocus="this.placeholder = ''", onblur="this.placeholder = 'Haz click aqui para buscar'")      
          .cart.hidden-phone
            i.icon-shopping-cart.icon-white   
            span.cartText  Lista de Pedido            
    #cartList
      .cartGuide
    #cartTotal
   
            
  
    .row      
      .categorias
        .row-fluid
          .comida(title="comida")
            .comida-img
              .background-img.active
              .background-img
              .background-img
              .background-img           
            p Comidas
          .bebida(title="bebida")
            .drink-img
              .background-img.active
              .background-img
              .background-img                           
            p Bebidas
        .row-fluid
          .transporte(title="transporte")
            .transporte-img
              .background-img.active                          
            p Taxis
          .hogar(title="hogar")
            .hogar-img
                .background-img.active                          
              p Hogar
          .farmacia(title="farmacia")
            .farmacia-img
              .background-img.active                          
            p Farmacia

      .loading.span2.offset5
      .results.span12
      if productPage
        .productPage.span12
          .product-box
            a.product
              .product-inner                
                p.Store
                  | #{store}
                input.Store_id(type="hidden", value="#{store_id}") 
                input.Sku(type="hidden", value="#{sku}") 
                img(src="#{img}")
                p.Name
                  | #{title} 
                p.Peek
                  | #{peek} 
                span.Likes
                  .fb-like(data-href="http://srluis.com/?o=product&q=#{id}", data-send="false", data-layout="button_count", data-width="115",data-show-faces="false")
                span.Price Bs. 
                  span.PriceNumber #{price}

    

         

          

    #myModal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true")&times;
        h3 Opciones del producto  
      .modal-body
        h6 Descripcion:
        p.modal-peek  Relleno de anguila, cangrejo y queso crema con tope de masago y lluvia de camarones tempurizados con salsa de mostaza miel.
        ul.nav.nav-tabs#myTab          
          li#l1.active
            a(href="#agregar") Agregale
          li#l2
            a(href="#cambiar") Cambiale 
          li#l3
            a(href="#quitar") Quitale
        .tab-content                   
          .tab-pane#agregar.active 
          .tab-pane#cambiar
          .tab-pane#quitar 
        h4.text-right.modal-price.span12

      .modal-footer
        a(href="#", class="btn", data-dismiss="modal", aria-hidden="true") Cancelar
        a#addToCart(href="#", class="btn btn-primary ", data-dismiss="modal", aria-hidden="true") Agregar a la lista de pedidos >>
    //MODAL 2 

    #myModal2.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true")&times;
        h3 Opciones del producto  
      .modal-body
        h6 Descripcion:
        p.msjTest Relleno de anguila, cangrejo y queso crema con tope de masago y lluvia de camarones tempurizados con salsa de mostaza miel.
        
      .modal-footer
        a(href="#", class="btn", data-dismiss="modal", aria-hidden="true") Cancelar
        a#addToCart(href="#", class="btn btn-primary ", data-dismiss="modal", aria-hidden="true") Agregar a la lista de pedidos >>
    


