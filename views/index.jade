  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    if productPage 
      meta( property="og:title", content="#{title} - #{store}" )
      meta(property="og:type", content="#{type}")
      meta(property="og:url", content="http://srluis.com/?o=product&q=#{id}")
      meta( property="og:image", content="#{img}")
      meta(property="og:site_name", content="SrLuis")
      meta(property="fb:admins", content="390325411063913")
