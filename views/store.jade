        .container(style="width:auto;")
          a.brand(href="#") SrLuis
          ul.nav(role="navigation")
            li.dropdown
              a#drop1.dropdown-toggle(href="#", role="button", data-toggle="dropdown") Dashboard 
            li.dropdown
