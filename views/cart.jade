    script(src=url+'js/vendor/modernizr-2.6.2-respond-1.1.0.min.js')
  body
    include include/navbar-store
    h3.span10.offset2 Lista de Carritos. 

    table.table.table-striped.table-hover.table-condensed.span10.offset2
      thead
        tr
          td.span1.text-center #
          td.span2.text-center Nombre
          td.span1.text-center Products
          td.span1.text-center Precio          
      tbody
        each item, i in cart
          tr
            td.text-center #{i+1}
            td.text-center #{item.user_id}
            - var price= 0
            - var products = 0
            each p, j in item.line_items
              br
              if p.user_id  == user.id
                - products ++
                - price= price+parseInt(p.price)
            td.text-center #{products}
            td.text-center #{price}
            

     
        
    

    footer
    
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
