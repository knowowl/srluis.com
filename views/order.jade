  body
    include include/navbar-store
    h3.span9.offset2.text-center Lista de Ordenes.
    if cart==''
      .alert.alert-warning.span9.offset2.text-center     
        | No se han recibido ordenes.
    else
      table.table.table-striped.table-hover.table-condensed.span10.offset2
        thead
          tr
            td.span1.text-center #
            td.span2.text-center Nombre
            td.span1.text-center Products
            td.span1.text-center Precio    
            td.span1.text-center Estado        
        tbody
          script
            var cart = !{JSON.stringify(ct)};  
            var user = !{user.id} ;      
          each item, i in cart
            tr#orderBtn.orderRow(data-target="#myModal", data-toggle="modal", role="button", item="#{i}")
              td.text-center #{i+1}                
              td.text-center #{item.user_id}
              - var price= 0
              - var products = 0
              each p, i in item.line_items
                if p.user_id  == user.id                  
                  - products++
                  - price= price+parseInt(p.price)
              td.text-center #{products}
              td.text-center #{price}
              td.text-center Pendiente
            

     
        
    
    #myModal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true")&times;
        h3 Orden  
      .modal-body
        .tabbable
          ul.nav.nav-tabs
            li.active
              a(href="#tab1", data-toggle="tab") Pedido
            li
              a(href="#tab2", data-toggle="tab") Mensajes  
            li
              a(href="#tab3", data-toggle="tab") Perfil del cliente
          .tab-content
            .tab-pane.active#tab1
             .row-fluid
              #orderTable
                ul.thead
                  li SKU
                  li Precio
                  li Nombre
              #contentTable
              
                  
                .btn-group
                  
                  button.btn.btn-large.btnOrder CANCELAR PEDIDO
                  button.btn.btn-success.btn-large.btn-primary.btnOrder CONFIRMAR PEDIDO
                
            .tab-pane#tab2
              .row-fluid
                #msjContent.span12            
              .input-append.row-fluid
                input.span10#mensaje(type="text")
                button.btn.btnMsj(type="button") Enviar
            .tab-pane#tab3
              p I'm in Section 1.
              
    

        
        
     
    footer
    
