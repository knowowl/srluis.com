!!!5
html.no-js
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width')
    link(rel='stylesheet', href=url+'css/bootstrap.min.css')    
    link(rel='stylesheet', href=url+'css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href=url+'css/store.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Muli:300,400')
    link(rel='stylesheet', href='http://know-owl.com/img/srluis/style.css')
    link(rel='stylesheet', href=url+'css/jquery.mCustomScrollbar.css')
    link(rel='stylesheet', href=url+'css/bootstrap-fileupload.min.css')
    script(src=url+'js/vendor/modernizr-2.6.2-respond-1.1.0.min.js')
  body
    include include/navbar-store
    h3.span9.offset2.text-center Lista de Ordenes.
    if cart==''
      .alert.alert-warning.span9.offset2.text-center     
        | No se han recibido ordenes.
    else
      table.table.table-striped.table-hover.table-condensed.span10.offset2
        thead
          tr
            td.span1.text-center #
            td.span2.text-center Nombre
            td.span1.text-center Products
            td.span1.text-center Precio          
        tbody

          each item, i in cart
            tr#orderBtn.orderRow(data-target="#myModal", data-toggle="modal", role="button")
              td.text-center #{i+1}
              td.text-center #{item.user_id}
              - var price= 0
              - var products = 0
              each p, i in item.line_items
                if p.user_id  == user.id
                  - products = i
                  - price= price+parseInt(p.price)
              td.text-center #{products}
              td.text-center #{price}
            

     
        
    
    #myModal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true")&times;
        h3 Orden  
      .modal-body
        h6 Responder:
        textarea.span3(name='mensaje')
        a.btnMsj Enviar mensaje
      .modal-footer
        a(href="#", class="btn", data-dismiss="modal", aria-hidden="true") Cancelar
        a#addToCart(href="#", class="btn btn-primary ", data-dismiss="modal", aria-hidden="true") Agregar a la lista de pedidos >>
    

    footer
    
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
    script(src='http://code.jquery.com/ui/1.10.0/jquery-ui.js')
    script
      window.jQuery || document.write('<script src="js/vendor/jquery-1.9.0.min.js"><\\/script>')
